---
import { SITE_DATA } from "../data/siteData";
const { services } = SITE_DATA;
const visitCharge = Number(services[0].price);
const installationCharge = Number(services[2].price);
import { NAVIGATION_DATA } from "../data/navigationData";
const { navigationItems: navData } = NAVIGATION_DATA;
---

<!-- ============================================ --><!--                  Pricing                     --><!-- ============================================ -->
<section id="pricing">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">Our Pricing</span>
      <h2 class="cs-title">Flexible Pricing Plans for Your Tailored Needs</h2>
